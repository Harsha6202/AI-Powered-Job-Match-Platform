{
  "routes": [
    {
      "route": "/api/*",
      "serve": "/api",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/css/*", "/js/*"]
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https: data:; worker-src 'self' blob:",
    "Access-Control-Allow-Origin": "*",
    "X-Frame-Options": "DENY"
  }
}
